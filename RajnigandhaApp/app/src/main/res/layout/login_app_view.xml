<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/user_id_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:drawableStart="@drawable/person_image"
        android:drawablePadding="8dp"
        android:hint="@string/email_id_mobile_no"
        android:importantForAutofill="no"
        android:textColorHint="@color/white"
        android:visibility="gone"
        app:backgroundTint="@color/white"
        android:textColor="@color/white"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/name_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:drawableStart="@drawable/person_image"
        android:drawablePadding="8dp"
        android:hint="@string/name"
        android:importantForAutofill="no"
        android:textColorHint="@color/white"
        android:visibility="gone"
        app:backgroundTint="@color/white"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/mobile_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="25dp"
        android:drawableStart="@drawable/phone_icon"
        android:drawablePadding="8dp"
        android:hint="@string/mobile_no"
        android:importantForAutofill="no"
        android:textColorHint="@color/white"
        android:visibility="gone"
        app:backgroundTint="@color/white"
        android:textColor="@color/white"
        android:inputType="numberDecimal"/>

    <EditText
        android:id="@+id/password_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"
        android:drawableStart="@drawable/lock_image"
        android:drawableEnd="@drawable/ic_baseline_visibility_24"
        android:drawablePadding="8dp"
        android:hint="@string/password"
        android:importantForAutofill="no"
        android:textColorHint="@color/white"
        android:visibility="gone"
        app:backgroundTint="@color/white"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/date_of_birth_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"
        android:drawableStart="@drawable/calander_icon"
        android:drawablePadding="8dp"
        android:hint="@string/date_of_birth"
        android:textColorHint="@color/white"
        android:visibility="gone"
        app:backgroundTint="@color/white"
        android:textColor="@color/white"/>

    <include
        layout="@layout/name_edittext_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"
        android:visibility="gone" />

    <include
        layout="@layout/mobile_edittext_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"
        android:visibility="gone" />

    <include
        layout="@layout/state_spinner_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"
        android:visibility="gone" />

    <Spinner
        android:id="@+id/state_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"
        android:drawableStart="@drawable/location_view"
        android:drawablePadding="8dp"
        android:hint="@string/state"
        android:textColorHint="@color/white"
        android:visibility="gone"
        app:backgroundTint="@color/white"
        android:textColor="@color/white"/>


    <Spinner
        android:id="@+id/city_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"
        android:drawableStart="@drawable/location_view"
        android:drawablePadding="8dp"
        android:hint="@string/city"
        android:textColorHint="@color/white"
        android:visibility="gone"
        app:backgroundTint="@color/white"
        android:textColor="@color/white"
        style="@style/Widget.AppCompat.Spinner.Underlined"/>

    <TextView
        android:id="@+id/forgot_password_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="30dp"
        android:text="@string/forgot_password"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/login_button_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:gravity="left"
        android:orientation="horizontal"
        tools:ignore="RtlHardcoded"
        android:visibility="gone">

        <Button
            android:id="@+id/sign_up_button"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:background="@color/orange"
            android:text="@string/sign_up"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/sign_in_button"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:background="@color/orange"
            android:text="@string/sign_in"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/privacy_policy_and_t_and_c_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/by_logging_in_you_agree_to_our"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/t_and_c_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/t_amp_c"
            android:textColor="@color/white" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/and"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/privacy_policy_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/privacy_policy"
            android:textColor="@color/white" />

    </LinearLayout>

    <Button
        android:id="@+id/log_in_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/log_in"
        android:textColor="@color/black"
        android:layout_marginTop="25dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:visibility="gone"/>

</LinearLayout>